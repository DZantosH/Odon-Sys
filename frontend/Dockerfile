FROM node:18-alpine as build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .

ARG REACT_APP_API_URL
ARG REACT_APP_BACKEND_URL
ARG REACT_APP_VPS_URL
ARG REACT_APP_CLINIC_NAME
ARG REACT_APP_CLINIC_PHONE
ARG REACT_APP_FORCE_PRODUCTION

ENV REACT_APP_API_URL=$REACT_APP_API_URL
ENV REACT_APP_BACKEND_URL=$REACT_APP_BACKEND_URL
ENV REACT_APP_VPS_URL=$REACT_APP_VPS_URL
ENV REACT_APP_CLINIC_NAME=$REACT_APP_CLINIC_NAME
ENV REACT_APP_CLINIC_PHONE=$REACT_APP_CLINIC_PHONE
ENV REACT_APP_FORCE_PRODUCTION=$REACT_APP_FORCE_PRODUCTION

RUN npm run build

FROM nginx:alpine
COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
